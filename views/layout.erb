<!doctype html>
<html>
  <head>
    <%= erb(:google_tracking) %>
    <script src="modernizr.js"></script>
    <meta charset="utf-8">
    <title><%= @title %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0">
    <link rel="stylesheet" href="reset.css">
    <link rel="stylesheet" href="fonts.css">
    <!-- default grid - expect this to get adjusted for different devices-->
    <link rel="stylesheet" href="responsive/grid.css">
    <!-- default device is basic mobile-->
    <link rel="stylesheet" href="responsive/base.css">
    <!--

        IE doesn't support media queries 

        We are tuning this into IE desktop
        mode by enabling base-wide over
        base and wide/desktop for IE browser
        less than IE 9

        We do nothing for IEMobile as
        the base.css is written for small
        form devices without media-query
        support already

    -->
    <!--[if !IEMobile]>
      <link rel="stylesheet" href="responsive/base-wide.css" media="all"/>
      <link rel="stylesheet" href="responsive/wide/desktop.css" media="all" />
    <![endif]-->
    <![if false]>
    <!-- small devices -->
    <link rel="stylesheet" 
          href="responsive/base-small.css"  
          media='screen and (min-width:320px) and (max-width:768px) ' 
          />    
    <!-- small portrait device -->
    <link rel="stylesheet"
          href="responsive/small/portrait.css"
          media='screen and (max-width:320px)'
        />
      
    <!-- small landscape device -->
    <link rel="stylesheet" 
          href="responsive/small/smaller_landscape.css"  
          media='screen and (min-width:320px) and (max-width:480px) '
          />
    
    <link rel="stylesheet" 
          href="responsive/small/landscape.css"  
          media='screen and (min-width:480px) and (max-width:768px) ' 
          />
    <!-- wide devices -->
    <link rel="stylesheet" 
          href="responsive/base-wide.css"  
          media='screen and (min-width:768px)' 
          />
    <!-- wide tablet device -->
    <link rel="stylesheet" 
          href="responsive/wide/tablet.css"  
          media='screen and (min-width:768px) and (max-width:1024px)' 
          />
    <!-- wide desktop device -->
    <link rel="stylesheet" 
          href="responsive/wide/desktop.css" 
          media='screen and (min-width:1024px)' 
          />
    <![endif]>
  </head>

  <body class="<%=@pagename.to_s%>">
    <%=yield%>
    <footer>
      <section class='bottom grid'>
      <div class='bottom-logo' src='images/services/services_mobile_logo.png' alt='blazing cloud'></div>
          <section>
            <article class='tile'>
            <ol>
              <li>
              <span>E mail</span> info@blazingcloud.net
              </li>
              <li>
              <span>Phone</span> (415) 800-8085
              </li>
              <li>
              <span>Fax</span> (415) 738-5407
              </li>
            </ol>
            </article>
          </section>
          <div class='copyright'>&copy; BlazingCloud - San Francisco, CA, USA</div>
      </section>
    </footer>
  </body>
</html>


